{
    "name": "corentinboutillier/invoice-bundle",
    "type": "symfony-bundle",
    "description": "Symfony Bundle pour la gestion de factures et avoirs conformes à la réglementation française",
    "keywords": ["symfony", "bundle", "invoice", "facture", "avoir", "credit-note", "french-law"],
    "license": "MIT",
    "authors": [
        {
            "name": "Corentin Boutillier",
            "email": "contact@corentinboutillier.com"
        }
    ],
    "require": {
        "php": ">=8.3",
        "symfony/framework-bundle": "^6.4|^7.0",
        "symfony/orm-pack": "^2.4",
        "doctrine/orm": "^2.17|^3.0",
        "doctrine/doctrine-bundle": "^2.11",
        "symfony/validator": "^6.4|^7.0",
        "symfony/serializer": "^6.4|^7.0",
        "symfony/event-dispatcher": "^6.4|^7.0",
        "dompdf/dompdf": "^2.0",
        "twig/twig": "^3.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "symfony/phpunit-bridge": "^6.4|^7.0",
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-symfony": "^1.3",
        "phpstan/phpstan-doctrine": "^1.3",
        "friendsofphp/php-cs-fixer": "^3.48"
    },
    "autoload": {
        "psr-4": {
            "CorentinBoutillier\\InvoiceBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CorentinBoutillier\\InvoiceBundle\\Tests\\": "tests/",
            "App\\": "tests/Fixtures/app/src/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "phpstan": "phpstan analyse",
        "cs-fix": "php-cs-fixer fix",
        "cs-check": "php-cs-fixer fix --dry-run --diff"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
